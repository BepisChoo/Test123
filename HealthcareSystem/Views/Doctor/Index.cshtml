@{
    ViewData["Title"] = "Doctor Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .dashboard {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        h1 {
            color: #333;
        }

        .welcome {
            color: #666;
            margin-bottom: 2rem;
        }

        .logout-btn {
            background: #dc3545;
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }

            .logout-btn:hover {
                background: #c82333;
            }
    </style>
</head>
<body>
    <div class="dashboard">
        <h1>👨‍⚕️ Doctor Dashboard</h1>
        <p class="welcome">Welcome back, Dr. <strong>@ViewBag.FullName</strong>!</p>
        <p>This is the doctor dashboard. You can manage appointments, view patient records, and more.</p>

        <form asp-action="Logout" asp-controller="Account" method="post" style="margin-top: 2rem;">
            @Html.AntiForgeryToken()
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    </div>
</body>
</html>